{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": ["<rootDir>/src/**/*.ts", "<rootDir>/src/**/*.tsx"],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      "./src/assets",
      ".mock.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
  
    "verbose": false
  }
  